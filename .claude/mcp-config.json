{
  "mcpServers": {
    "supabase": {
      "command": "npx",
      "args": [
        "-y",
        "@supabase/mcp-server-supabase@latest",
        "--read-only",
        "--project-ref=${SUPABASE_PROJECT_REF}"
      ],
      "env": {
        "SUPABASE_PROJECT_REF": "your-project-ref-here",
        "SUPABASE_ACCESS_TOKEN": "your-access-token-here"
      }
    }
  }
}